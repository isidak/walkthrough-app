<mvc:View controllerName="ui5.walkthrough.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List headerText="{i18n>invoiceListTitle}" items="{invoice>/Invoices}" class="sapUiResponsiveMargin" mode="SingleSelectMaster" width="auto">
        <items>
            <ObjectListItem title="{invoice>Quantity} x {invoice>ProductName}" number="{
                    parts: [
                    'invoice>ExtendedPrice',
                    'view>/currency'
                    ],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }" numberUnit="{view>/currency}" />
        </items>
    </List>
</mvc:View>